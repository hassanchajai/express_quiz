
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/css/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Platform</title>
</head>
<body>
    <div class="w-full max-w-xs">
        <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
              Username
            </label>
            <input class="Email shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Username">
          </div>
          <div class="mb-6">
            <label class=" block text-gray-700 text-sm font-bold mb-2" for="password">
              Password
            </label>
            <input class="Password shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="******************">
            <p class="text-red-500 text-xs italic">Please choose a password.</p>
          </div>
          <div class="flex items-center justify-between">
            <button  onClick='SingnIn()' class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="button">
              Sign In
            </button>
            <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="#">
              Forgot Password?
            </a>
          </div>
        </form>
        <p class="text-center text-gray-500 text-xs">
          &copy;2020 Acme Corp. All rights reserved.
        </p>
      </div>


      <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>

        const SingnIn = () =>{
              let Data = {
                Email:document.querySelector('.Email').value,
                Password:document.querySelector('.Password').value,
              }
              console.log(Data)
                axios
                .post('Api/SignIn',
                {
                  Email:document.querySelector('.Email').value,
                  Password:document.querySelector('.Password').value,
                }
                )
                .then(response =>{
                    console.log(response.data[0].FullName)
                    localStorage.setItem('Login',true)
                    localStorage.setItem('UserName',response.data[0].FullName)
                    window.location.href = "http://localhost:8080/Dashboard";
                }).catch(error =>{
                    console.log(error.response)
                })
        }
    </script>

</body>
</html>
